    "@types/node": "^24.5.2",
    "cookie-parser": "^1.4.7",
    "copyfiles": "^2.4.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.4",
